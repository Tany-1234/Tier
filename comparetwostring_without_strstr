#include<stdio.h>
#include<string.h>
 int main() {
     char s[100];
     char x[100];
     int i,j, found=0;
     printf("Enter the string");
     scanf("%s",s);
     printf("Enter the string");
     scanf("%s",x);

     int len1 = strlen(s);
     int len2 = strlen(x);

     for(i = 0; i <= len1 - len2; i++) {
         for(j = 0; j < len2; j++) {
             if(s[i + j] != x[j]) {
                 break;
             }
         }
         if(j == len2) {
             printf("First occurrence at index: %d", i);
             found = 1;
             break;
         }
     }

     if(found == 0) {
         printf("Substring not found");
     }
     return 0;
 }
