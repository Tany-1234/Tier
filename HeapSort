#include<stdio.h>
int a[10];
int heapsize=9;
void heapify(int );
void heapify(int i)
{
 int l,r,t,largest;
 l=2*i+1;
 r=2*i+2;
 if((l<=heapsize) && (a[l]>a[i])) {
  largest=l;
 }
 else {
  largest=i;
 }
 if ((r<=heapsize) && (a[r]>a[largest])) {
  largest=r;
 }
 if (i!=largest) {
  t=a[i];
  a[i]=a[largest];
  a[largest]=t;
  heapify(largest);
 }
}
void heapsort();
int main() {
 int i;
 printf("enter 10 integer");
 for(i=0;i<10;i++) {
  scanf("%d",&a[i]);
 }
 for (i=heapsize/2; i>=0; i--)
  heapify(i);

 heapsort();
 for (i=0;i<10;i++) {
  printf("%d   ",a[i]);
 }
 return 0;
}
void heapsort() {
 int i,t;
 for(i=heapsize; i>=1; i--) {
  t = a[0];
  a[0] = a[i];
  a[i]=t;
  heapsize=heapsize-1;
  heapify(0);
 }
}
